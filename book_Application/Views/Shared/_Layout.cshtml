
@{
    ViewData["Title"] = "Bokhyllan";
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" type="text/css" href="~/css/style.css">
    </head>
    <body>
        <header>
            <div class="containerHead">

                <div class="topnav">
                    <!--Navigation-->
                    <nav>
                        <a asp- controller="Home" asp-action="Index">Bokhyllan</a>
                        <a asp- controller="Home" asp-action="Booklist">Boklistan</a>
                        <a asp- controller="Home" asp-action="Read">Lästips</a>
                    </nav>

                    <img class="contentImg" alt="Picture of books" src="~/images/books-old-book-knowledge-bookstore-34592(2).jpg" />
                </div>
            </div>
        </header>

        <div id="wrapper">
            <main>
                @RenderBody() <!--Dynamic content-->
            </main>
        </div>
        
        <footer>
            <p>	&copy; Sandra Wara 2020</p>
        </footer>

    </body>
</html>


